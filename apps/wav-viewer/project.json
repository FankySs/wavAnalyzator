{
  "name": "wav-viewer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "root": "apps/wav-viewer",
  "sourceRoot": "apps/wav-viewer/src",
  "prefix": "app",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/wav-viewer",
        "browser": "apps/wav-viewer/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/wav-viewer/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          { "glob": "**/*", "input": "apps/wav-viewer/public" }
        ],
        "styles": ["apps/wav-viewer/src/styles.scss"]
      },
      "configurations": {
        "production": {
          "budgets": [
            { "type": "initial", "maximumWarning": "500kb", "maximumError": "1mb" },
            { "type": "anyComponentStyle", "maximumWarning": "4kb", "maximumError": "8kb" }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": { "buildTarget": "wav-viewer:build:production" },
        "development": { "buildTarget": "wav-viewer:build:development" }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": { "buildTarget": "wav-viewer:build" }
    },
    "lint": { "executor": "@nx/eslint:lint" },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/wav-viewer/jest.config.ts",
        "tsConfig": "apps/wav-viewer/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "wav-viewer:build",
        "staticFilePath": "dist/wav-viewer/browser",
        "spa": true
      }
    }
  }
}
